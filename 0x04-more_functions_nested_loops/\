#include "main.h"

/**
 * print_triangle - prints a triangle, followed by a new line
 * @size: size of the triangle
 */

void print_triangle(int size)
{
	int i, j, k;

	if (size < 0 || size == 0)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 1; i <= size; i++)
		{
			for (j = size; j >= i; j--)
			{
				_putchar(' ');
			}

			for (k = 0; k < i; k++)
			{
				_putchar('#');
			}
			_putchar('\n');
		}
		_putchar(' ');
	}
}
